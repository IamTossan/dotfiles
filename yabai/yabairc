sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

/usr/local/bin/limelight &
sleep 2 && limelight -m config width 2

# set default layout to tiled
yabai -m config layout bsp
yabai -m config window_placement first_child

# set padding and gaps
yabai -m config top_padding    5
yabai -m config bottom_padding 5
yabai -m config left_padding   5
yabai -m config right_padding  5
yabai -m config window_gap     5

yabai -m config auto_balance off
yabai -m config split_ratio 0.6

yabai -m space 1 --label 1
yabai -m space 2 --label 2
yabai -m space 3 --label 3
yabai -m space 4 --label 4
yabai -m space 5 --label 5
yabai -m space 6 --label 6
yabai -m space 7 --label 7
yabai -m space 8 --label chat
yabai -m space 9 --label www
